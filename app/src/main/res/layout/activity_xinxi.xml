<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:text="待处理信息"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/menu_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="#e0e2e2"
            android:onClick="back_click"
            app:srcCompat="@drawable/previous2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/zonghexinxi"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/abnormal"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:gravity="center"
            android:text="今日收缩压180!"
            android:textColor="#000000"
            android:textSize="25dp"/>

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:background="@drawable/moreinfo"
            android:onClick="xq_click"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button_xdyz"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/button_xdyz"
            android:text="下达医嘱"
            android:textSize="17dp"
            android:onClick="xiadayizhu_click"/>

        <Button
            android:id="@+id/button_wyzx"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_wyzx"
            android:text="我已知晓"
            android:textSize="17dp"
            android:onClick="woyizhixiao_click"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textSize="23dp"
            android:layout_marginLeft="35dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="修改"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_quxiao"
            android:onClick="xgjbxx_click"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/xingming"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别："
            android:textSize="20dp"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/xingbie"
            android:textSize="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生年份："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/nianling"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="床号："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/chuanghao"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主治医生："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/zhuzhiyisheng"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责护工："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/fuzehugong"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家人联系方式1："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lianxi1"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家人联系方式2："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lianxi2"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险等级："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fengxiandengji"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险因素："
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fengxianyinsu"
            android:textSize="20dp"
            />
    </LinearLayout>

</LinearLayout>